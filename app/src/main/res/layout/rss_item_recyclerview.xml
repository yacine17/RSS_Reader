<?xml version="1.0" encoding="utf-8"?>
<com.example.yacinehc.mplrss.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp" android:orientation="horizontal" android:clickable="true"
    android:focusable="true" android:background="@drawable/ripple">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rss_logo"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/rss_title"
            android:textFontWeight="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"/>
    </LinearLayout>
</com.example.yacinehc.mplrss.CheckedLinearLayout>